extends ../layouts/login

block content
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login", method="POST", class="form-login")
		img(src="https://coders.tokyo/images/favicon.png")
		h2 Login
		input(type="text", name="username", value= values ? values.username : "")
		input(type="password", name="password", value= values ? values.password : "")
		button(type="submit") Login